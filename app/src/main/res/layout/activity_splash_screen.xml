<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@color/colorPrimary"
    android:padding="20dp" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageview"
            android:layout_width="350dp"
            android:layout_height="350dp"
            app:srcCompat="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:transitionName="Splash_image"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="DR Shakuntala Misra National Rehabilitation university"
            android:transitionName="Splash_text"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp"
            app:fontFamily="@font/bungee" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:text="app created and developed by\nprince dwivedi"
            android:textAlignment="center"
            android:textSize="20sp"
            app:fontFamily="@font/bungee" />


    </LinearLayout>
</RelativeLayout>



